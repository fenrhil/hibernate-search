<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.1">
    <deployment>
        <dependencies>
            <module name="org.hibernate.commons-annotations" slot="main"/>
            <module name="org.apache.commons.io" slot="main" />
        </dependencies>
        <exclusions>
            <!-- See jboss-deployment-structure-excludejavassist.xml -->
            <module name="org.javassist" />
        </exclusions>
    </deployment>
    <module name="deployment.org.apache.tika" slot="${tika.module.slot}">
        <resources>
            <resource-root path="tika-core.jar" />
        </resources>
    </module>
</jboss-deployment-structure>
